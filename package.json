{
  "name": "vscode-blueprint-ai",
  "displayName": "vscode-blueprint-ai",
  "description": "A VSCode extension written in TypeScript that leverages AI to generate clean, static HTML, CSS, and JavaScript webpages with a simple drag-and-drop interface.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blueprint-ai.openWebview",
        "title": "Open Blueprint AI"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Blueprint AI",
      "properties": {
        "blueprintAI.openaiApiKey": {
          "type": "string",
          "description": "OpenAI API key used by the Blueprint AI extension."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "install:all": "npm install && npm install --prefix webview-ui",
    "build:all": "npm run compile && npm run build --prefix webview-ui"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "sharp": "^0.33.5",
    "tesseract.js": "^6.0.0"
  }
}
